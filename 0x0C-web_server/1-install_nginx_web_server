#!/usr/bin/env bash

# Update the package lists
apt-get -y update

# Install Nginx
apt-get -y install nginx

# Configure Nginx to listen on port 80
echo "server {
    listen 80 default_server;
    listen [::]:80 default_server;

    root /var/www/html;
    index index.html;

    location / {
        return 200 'Hello World!';
    }
}" > /etc/nginx/sites-available/default

# Restart Nginx
service nginx restart
